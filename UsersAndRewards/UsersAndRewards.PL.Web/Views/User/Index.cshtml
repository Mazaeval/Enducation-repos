@using UsersAndRewards.Shared;
@model List<UserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birthday</th>
            <th>Age</th>
            <th>Rewards</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Birthdate.ToShortDateString()</td>
                <td>@user.Age</td>
                <td>@user.Rewards</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { UsersId = user.UserId })
                    @Html.ActionLink("Delete", "Delete", new { UsersId = user.UserId })
                </td>
            </tr>
        }
    </tbody>

</table>
